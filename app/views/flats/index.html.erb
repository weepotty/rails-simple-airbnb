<div class="container mt-5">
  <h1>All our Flats (<%= @flats.length %>)</h1>
  <div class="d-flex">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h2><%= flat.name %></h2>
              <p><%= flat.address %></p>
              <p><i class="fa-solid fa-user"></i> <%= flat.number_of_guests %></p>
              <p><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <%= link_to flat_path(flat) do %>
                  More info
                <% end %>
                <%= link_to edit_flat_path(flat) do %>
                  Edit
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
